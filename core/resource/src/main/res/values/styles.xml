<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.WeatherWizard" parent="Theme.Material3.Light.NoActionBar" />

    <style name="Button.Default" parent="">
        <item name="android:background">@drawable/background_button</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Button.Stroke" parent="">
        <item name="android:background">@drawable/background_stroke_button</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Button.TextWithDrawable" parent="">
        <item name="android:background">@drawable/background_stroke_button</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">@color/blue_button</item>
    </style>

    <style name="Button.TextWithDrawable.Round" parent="">
        <item name="android:background">@drawable/background_round_button</item>
        <item name="android:clickable">true</item>
        <item name="android:backgroundTint">@color/blue_button</item>
    </style>

    <style name="Widget.WeatherWizard.RemoteViews.RootContainer" parent="">
        <item name="android:id">@id/remote_views_root_container</item>
    </style>

    <style name="Widget.WeatherWizard.Widget.Container" parent="Widget.WeatherWizard.RemoteViews.RootContainer">
        <item name="android:background">@color/widget_background</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="Widget.WeatherWizard.Notification.Container" parent="Widget.WeatherWizard.RemoteViews.RootContainer" />

    <style name="Widget.WeatherWizard.RemoteViews.Container.Content" parent="">
        <item name="android:id">@id/remote_views_content_container</item>
    </style>

    <style name="Widget.WeatherWizard.Notification.Container.Content" parent="Widget.WeatherWizard.RemoteViews.Container.Content" />

    <style name="Widget.WeatherWizard.Widget.Container.Content" parent="Widget.WeatherWizard.RemoteViews.Container.Content" />

    <style name="WidgetActivity" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowMinWidthMajor">0%</item>
    </style>
</resources>