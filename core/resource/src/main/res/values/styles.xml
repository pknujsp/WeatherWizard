<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button.Default" parent="">
        <item name="android:background">@drawable/background_button</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Button.Stroke" parent="">
        <item name="android:background">@drawable/background_stroke_button</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Button.TextWithDrawable" parent="">
        <item name="android:background">@drawable/background_stroke_button</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">@color/blue_button</item>
    </style>

    <style name="Button.TextWithDrawable.Round" parent="">
        <item name="android:background">@drawable/background_round_button</item>
        <item name="android:clickable">true</item>
        <item name="android:backgroundTint">@color/blue_button</item>
    </style>

    <style name="Widget.WeatherWizard.RemoteViews.RootContainer" parent="Theme.WeatherWizard">
        <item name="android:id">@id/remote_views_root_container</item>
    </style>

    <style name="Widget.WeatherWizard.AppWidget.Container" parent="Widget.WeatherWizard.RemoteViews.RootContainer">
        <item name="android:clickable">true</item>
        <item name="android:padding">?attr/appWidgetPadding</item>
        <item name="android:background">@drawable/app_widget_background</item>
    </style>

    <style name="Widget.WeatherWizard.Notification.Container" parent="Widget.WeatherWizard.RemoteViews.RootContainer" />

    <style name="Widget.WeatherWizard.RemoteViews.Container.Content" parent="">
        <item name="android:id">@id/remote_views_content_container</item>
    </style>

    <style name="Widget.WeatherWizard.Notification.Container.Content" parent="Widget.WeatherWizard.RemoteViews.Container.Content" />

    <style name="Widget.WeatherWizard.AppWidget.Container.Content" parent="Widget.WeatherWizard.RemoteViews.Container.Content" >
        <item name="android:padding">?attr/appWidgetPadding</item>
        <item name="android:background">@drawable/app_widget_inner_view_background</item>
    </style>


</resources>